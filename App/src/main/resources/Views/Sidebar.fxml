<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.focus_time.Controllers.MainController">
    <!-- Sidebar -->
    <VBox prefWidth="200.0" style="-fx-background-color: #f4f4f4;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
        <!-- Logo -->
        <VBox alignment="CENTER" spacing="10.0" style="-fx-padding: 20 0 20 0;">
            <ImageView fitHeight="80.0" fitWidth="80.0" preserveRatio="true" style="-fx-padding: 10;">
                <image>
                    <Image url="@../imgs/logoapp.png" />
                </image>
            </ImageView>
        </VBox>

        <!-- Sidebar Buttons with Images -->
        <VBox spacing="5.0" style="-fx-padding: 10 10 10 10;">
            <!-- Dashboard Button with Image -->
            <Button prefHeight="40.0" prefWidth="192.0" style="-fx-background-color: transparent;" text="Dashboard">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                        <image>
                            <Image url="@../imgs/dashboard2.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <!-- Applications Button with Image -->
            <Button prefHeight="40.0" prefWidth="192.0" style="-fx-background-color: transparent;" text="Applications">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                        <image>
                            <Image url="@../imgs/apps2.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <!-- Reports Button with Image -->
            <Button prefHeight="40.0" prefWidth="192.0" style="-fx-background-color: transparent;" text="Reports">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                        <image>
                            <Image url="@../imgs/reports.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <!-- My Goals Button with Image -->
            <Button prefHeight="40.0" prefWidth="192.0" style="-fx-background-color: transparent;" text="My Goals">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                        <image>
                            <Image url="@../imgs/goals.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <!-- Additional Buttons -->
            <Button prefHeight="40.0" prefWidth="192.0" style="-fx-background-color: transparent;" text="App Block" >
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                    <image>
                        <Image url="@../imgs/appblock2.png" />
                    </image>
                </ImageView>
            </graphic>
             </Button>
            <Button prefHeight="40.0" prefWidth="192.0" style="-fx-background-color: transparent;" text="App Limits" >
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                        <image>
                            <Image url="@../imgs/applim2.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button prefHeight="40.0" prefWidth="192.0" style="-fx-background-color: transparent;" text="Notifications" >
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                        <image>
                            <Image url="@../imgs/notf2.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </VBox>

        <!-- Settings and Log out -->
        <VBox spacing="10.0" style="-fx-padding: 40 10 10 10;">
            <Button prefHeight="26.0" prefWidth="252.0" style="-fx-background-color: transparent;" text="Settings" >
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                        <image>
                            <Image url="@../imgs/settings.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button prefHeight="26.0" prefWidth="207.0" style="-fx-background-color: transparent;" text="Log out" >
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                        <image>
                            <Image url="@../imgs/logout.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </VBox>
    </VBox>

    <!-- Main Goals Area -->
    <VBox layoutY="91.2" prefHeight="509.0" prefWidth="600.0" style="-fx-padding: 20;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="91.0">
        <!-- Goals Label with Gray Background -->
        <HBox prefHeight="35.0" prefWidth="560.0" spacing="10.0" style="-fx-background-color: #d3d3d3; -fx-padding: 2; -fx-alignment: center-left;">
            <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                <image>
                    <Image url="@../imgs/goals.png" />
                </image>
            </ImageView>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="GOALS" />
        </HBox>
    </VBox>
</AnchorPane>
